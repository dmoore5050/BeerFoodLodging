!!!
%html
  %head
    %title BeerFoodLodging
    = stylesheet_link_tag    'application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .header
      - if current_user
        = current_user.email
        = button_to 'Log out', destroy_user_session_path, method: :delete
      - else
        = button_to 'Log in', new_user_session_path
      %p.notice= notice
      %p.alert= alert

    = yield
